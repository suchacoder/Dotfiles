# Press $mod+o to use the 'mode launcher' and Return or Esc to go back at the default mode

set $mode_launcher Launch: [D]iscord [E]lectrum [F]irefox-Dev [G]pick [J]downloader [P]avucontrol [R]adiant [S]team [T]elegram [U]rban [X]fburn [W]allpaper [Z]athura
bindsym $mod+o mode "$mode_launcher"

mode "$mode_launcher" {

    bindsym d exec discord
    bindsym e exec electrum
    bindsym f exec ~/firefox/firefox
    bindsym g exec gpick
    bindsym j exec jdownloader
    bindsym p exec pavucontrol
    bindsym r exec radiant
    bindsym s exec steam
	bindsym t exec telegram-desktop
    bindsym u exec /opt/urbanterror/urbanterror set fs_homepath /opt/urbanterror/
    bindsym x exec xfburn
    bindsym w exec ~/bin/wallpaper.sh
	bindsym z exec zathura
#   bindsym r exec urxvtc -e rtorrent

    bindsym Esc mode "default"
    bindsym Return mode "default"
}

######################################
# Shutdown reboot logout lock screen #
######################################

set $mode_system System: (L) Lock (E) Logout (R) Reboot (Shift+Delete) Shutdown

mode "$mode_system" {
    bindsym l exec --no-startup-id ~/bin/lock.sh
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+Delete exec --no-startup-id systemctl poweroff -i, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+BackSpace mode "$mode_system"

