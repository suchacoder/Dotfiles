# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)

bar {
        #status_command i3status -c ~/.config/i3/i3status.conf
        status_command i3blocks -c ~/.config/i3/i3blocks.conf
        position bottom
		mode dock
        tray_output none
        font pango:Inconsolata Bold for Powerline bold 8

        colors {
        background $background
        statusline $bred
        separator  $bblack
        
        #class                border      background   text
        focused_workspace     $background $background  $red
        active_workspace      $background $background  $bgreen
        inactive_workspace    $background $background  $black
        urgent_workspace      $background $background  $bmagenta
        binding_mode          $background $background  $bblack
    }
}

